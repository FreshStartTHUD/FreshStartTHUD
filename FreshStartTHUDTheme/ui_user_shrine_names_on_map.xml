<?xml version="1.0" encoding="utf-8"?>

<config>
	
	<templates>
		
		<Shrines_Default>
			<map_label>
				<text font_family="verdana" font_size="6" font_color="255,251,252,131" font_bold="0" font_shadow="0">
					<custom_shadow enabled="1" heavy="1" color="100,0,0,0" />
				</text>
			</map_label>
			<map_shape enabled="1" radius="4" ping_speed="0" shape="rectangle" color="255,251,252,131" stroke="2" />
			<ground_label enabled="1" on_screen="1" off_screen="1">
				<body enabled="1" color="255,255,255,64" stroke="0" />
				<text font_family="verdana" font_size="6" font_color="255,0,0,0" font_bold="0" font_shadow="0">
					<custom_shadow enabled="0" heavy="1" color="100,0,0,0" />
				</text>
			</ground_label>
		</Shrines_Default>
			
		<Shrines_Name_Short enabled="1" template="Shrines_Default"/><!-- TO DISABLE: change enabled="1" to enabled="0" -->
		<Pylons_Name_Short enabled="1" template="Shrines_Default"/><!-- TO DISABLE: change enabled="1" to enabled="0" -->
		
	</templates>
	
	<actors>
			
